@using BlogProject.UI
@model IEnumerable<BlogProject.Entity.Category>

@{
    ViewBag.Title = "Index";
}


    <h2>Kategoriler</h2>

    <p>
        @Bootstrap.LinkButton("/Category/Create", "primary", null, "", "plus", "Create");      
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Bootstrap.LinkButton("/Category/Edit/"+item.Id, "warning", "btn-xs", "Edit", "edit", null)
                    @Bootstrap.LinkButton("/Category/Details/"+item.Id, "info", "btn-xs", "Details", "search", null)
                    @Bootstrap.LinkButton("/Category/Delete/"+item.Id, "danger", "btn-xs", "Delete", "trash", null)
                                       

                </td>
            </tr>
        }

    </table>



<script>
    $(function () {
        $("footer").parent().hide();
    })
</script>
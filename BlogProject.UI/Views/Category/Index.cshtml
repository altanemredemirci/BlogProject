@model IEnumerable<BlogProject.Entity.Category>

@{
    ViewBag.Title = "Index";
}


    <h2>Kategoriler</h2>

    <p>
       <a href="/Category/Create" class="btn btn-primary">
           <span class="glyphicon glyphicon-plus"></span> Create
       </a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreateOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedUsername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="/Category/Edit/@item.Id" class="btn btn-warning btn-xs" title="Edit">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a href="/Category/Details/@item.Id" class="btn btn-info btn-xs" title="Details">
                        <span class="glyphicon glyphicon-search"></span>
                    </a>
                    <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-xs" title="Delete">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                   
                </td>
            </tr>
        }

    </table>



<script>
    $(function () {
        $("footer").parent().hide();
    })
</script>
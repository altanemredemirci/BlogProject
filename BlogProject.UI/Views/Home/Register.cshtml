@using BlogProject.Entity.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "BlogProject - Kayıt Sayfası";
}

<link href="~/Content/login-register.css" rel="stylesheet" />

@using (Html.BeginForm()) //default method:POST
{
 
    <section class="login-info">       
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Register Form </h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false) @*ValidationErrors gösterilsin mi? false:göster true: gizle*@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                        @Html.ValidationMessageFor(model => model.Username)
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email adresiniz" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Tekrar Şifreniz", type = "password" })
                        @Html.ValidationMessageFor(model => model.RePassword)
                    </div>
                    
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

}

<script>
    $(function () {
        $("footer").parent().hide();
    })
</script>